@{
  Layout = "_Layout";
}

@using Market.Models;
@model IEnumerable<Market.Models.Flavor>

<h1>Your Flavor Selection</h1>
<br>

@if (Model.Any())
{
  
    @foreach (Flavor flavor in Model)
    {
      <h3>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</h3>
    }
  
} 
else
{
  <h3>No flavors have been added yet!</h3>
}
<br>

<h4>@Html.ActionLink("Add new flavor", "Create")</h4>
<h4>@Html.ActionLink("Delete All Flavors", "DeleteAll")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>